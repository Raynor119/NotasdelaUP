<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/texti"
		android:layout_width="300dp"
		android:layout_height="73dp"
		android:layout_gravity="center_horizontal"
		android:text="Digite la Materia"
		android:gravity="center"/>

	<TextView
		android:id="@+id/espacio1"
		android:layout_width="300dp"
		android:layout_height="30dp"
		android:layout_gravity="center_horizontal"
		android:text=""
		android:gravity="center"/>

	<EditText
		android:id="@+id/editext1"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:inputType="text"
		android:hint="Materia"/>

	<TextView
		android:layout_height="30dp"
		android:layout_width="wrap_content"/>

	<TextView
		android:id="@+id/espacio2"
		android:layout_width="300dp"
		android:layout_height="73dp"
		android:layout_gravity="center_horizontal"
		android:text="Digite el Numero de Creditos"
		android:gravity="center"/>

	<TextView
		android:layout_height="30dp"
		android:layout_width="wrap_content"
		android:id="@+id/activitydigitarmiTextView1"
		android:layout_gravity="center_horizontal"/>

	<EditText
		android:id="@+id/editext12"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:inputType="number"
		android:hint="Creditos"
		android:gravity="center"/>

	<TextView
		android:id="@+id/espacio155"
		android:layout_width="300dp"
		android:layout_height="62dp"
		android:layout_gravity="center_horizontal"
		android:text=""
		android:gravity="center"/>

	<Button
		android:id="@+id/bottom"
		android:layout_width="175dp"
		android:layout_height="70dp"
		android:layout_gravity="center_horizontal"
		android:text="Guardar"
		android:textSize="18sp"
		android:textAllCaps="false"
		android:textColor="#FFFFFF"
		android:background="@drawable/button_background"/>

	<TextView
		android:id="@+id/espaci21o1"
		android:layout_width="300dp"
		android:layout_height="31dp"
		android:layout_gravity="center_horizontal"
		android:text=""
		android:gravity="center"/>

	<Button
		android:id="@+id/botton0120"
		android:layout_width="160dp"
		android:layout_height="60dp"
		android:onClick="sigu"
		android:layout_gravity="center_horizontal"
		android:text="Siguiente"
		android:textSize="18sp"
		android:textAllCaps="false"
		android:textColor="#FFFFFF"
		android:background="@drawable/button_background"/>

</LinearLayout>

